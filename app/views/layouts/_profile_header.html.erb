<div class="gen-header header-tall" id="profile-header">
	<div class="bg-container">
		<div class="container">

			<div class="six columns">
				<%= retina_image_tag(@therapist, :avatar, :medium, :default => [300,300]) %>
			</div>
			<div class="ten columns">
				<h1><%= @therapist.first_name %> <%= @therapist.last_name %></h1>
				<h3><%= @therapist.title %>, <%= @therapist.degree %></h3>
				<hr>
				<div class="profile-image-icon">
					<div class="email-icon"></div>
					<h3><%= @therapist.email %></h3>
				</div>
				<div class="profile-image-icon">
					<div class="phone-icon"></div>
					<h3><%= @therapist.phone %></h3>
				</div>
				<div class="profile-image-icon">
					<div class="location-icon"></div>
					<h3><%= @therapist.city %>, <%= @therapist.state %>, <%= @therapist.zipcode%></h3>
				</div>
			</div>
			<div class="sixteen columns" id="copy-container">
				<h1><%= yield :title %></h1>
				<%= yield :body %>
			</div>
			<%= yield :arrow_down_option %>
		</div>
	</div>
</div>