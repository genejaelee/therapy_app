<%= form_tag("/charge") do %>
	<article>
		<label class="amount">
			<h2>Get advice from a therapist for just <%= "$" + (@user.price.to_f / 100).ceil.to_s %>.</h2>
			<h3>Pay securely and confidentially with Stripe.</h3>
		</label>
	</article>
	
	<hr></hr>
	
	<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
	          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	          data-description="Get advice from therapists"
	          data-amount=<%= @user.price %>
						data-email=<%= @user.email %>>
	</script>
	
<% end %>