<% set_meta_tag :title => 'Payment Information',
								:noindex => true 
%>

<body id="form-page">
	<% content_for :title do %>
	  Payment information, the final step.
	<% end %>

	<% content_for :body do %>
	  <p>Remember, you are not currently being charged. You will not be charged until after your session, and only if you confirm it was a positive experience.</p>
	<% end %>
	
	<% content_for :arrow_down_option do %>
	<% render 'layouts/arrow_down' %>
	<% end %>

	<%= render 'layouts/header' %>

	<div class="charge-panel panel">
		<div class="bg-container">
			<div class="container">

	<%= render 'layouts/charge_form' %>

		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>

			</div>
		</div>
	</div>
</body>