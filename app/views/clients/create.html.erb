<% content_for :title do %>
  What's on your mind?
<% end %>

<% content_for :body do %>
  <p>We want to assure you that the privacy and security of your information is our number one priority. With that in mind, please write what you want to share with a therapist and any questions you might have. Don't worry about writing too much. Providing a detailed picture of what you're experiencing can only result in more helpful responses.</p>
<% end %>

<% content_for :arrow_down_option do %>
<% render 'layouts/arrow_down' %>
<% end %>

<%= render 'layouts/header' %>

<div class="panel signup-panel">
	<div class="bg-container">
		<div class="container">
			<%= form_for @client, url: { controller: "clients", action: "update" } do |f| %>
			
				<%= f.text_area :description, 
												:onkeyup => "textAreaAdjust(this)",
												:autofocus => "true",
												:id => "explanation-text", 
												:placeholder => "Hello doctor..." %>
				<span class="sixteen columns" id="counter-text"></span>
				
				<%= render 'shared/error_messages' %>
				
				<%= f.submit "Submit", :class => "submit_button_white button sixteen columns" %>
			<% end %>
				

		</div>	
	</div>
</div>