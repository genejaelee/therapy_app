<% content_for :title do %>
  Submit
<% end %>

<% content_for :body do %>
  <p>We want to assure you that the privacy and security of your information is our number one priority. With that, we need a little more information to get you the best match possible.</p>
<% end %>

<% content_for :arrow_down_option do %>
<% render 'layouts/arrow_down' %>
<% end %>

<%= render 'layouts/header' %>

<div class="panel signup-panel">
	<div class="bg-container">
		<div class="container">
			<%= form_for @user, url: { controller: "users", action: "finish" } do |f| %>
				
				<%= label_tag :name, "What's your name?"%>
				<%= f.text_field :name, :autofocus => "true", :placeholder => "First name (optional)" %>
				
				<%= label_tag :gender, "What is your gender?" %>
				<%= f.select(:gender, [['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']]) %>
				
				<%= label_tag :age, "How old are you?" %>
				<%= f.text_field :age, :placeholder => "ex. 19" %>
				
				<%= label_tag :gender_pref, "Do you have a gender preference for the therapist we match you with?"%>
				<%= f.select(:gender_pref, [['Male', 'Male'], ['Female', 'Female'], ['No Preference', 'None']])%>
				
				<%= label_tag :current_therapist, "Are you currently seeing a therapist?"%>
				<%= f.select(:current_therapist, [['--', ''], ['Yes', 'Yes'], ['No', 'No']], :id => "current_therapist")%>
				
				<%= label_tag :current_therapist_name, "If yes, what is his/her name? (This is only needed if you do not want us to contact your current therapist)", :class => "current_therapist_name" %>
				<%= f.text_field(:current_therapist_name, :placeholder => "ex. John Doe (optional)", :class => "current_therapist_name")%>
				
				<%= label_tag :insurance, "If you have an insurance provider let us know who. If not, enter 'don't know'" %>
				<%= f.text_field(:insurance, :placeholder => "ex. Anthem Blue Cross")%>
				
				<%= render 'shared/error_messages' %>
				
				<%= f.submit "Submit", :class => "submit_button_white button sixteen columns" %>
			<% end %>
				

		</div>	
	</div>
</div>