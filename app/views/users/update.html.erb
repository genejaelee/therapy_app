<% content_for :title do %>
  Almost done!
<% end %>

<% content_for :body do %>
  <p>We want to assure you that the privacy and security of your information is our number one priority. With that, we need a little more information to get you the best match possible.</p>
<% end %>

<%= render 'layouts/header' %>

<div class="panel" id="signup-panel">
	<div class="bg-container">
		<div class="container">
			<%= form_for @user, url: { controller: "users", action: "update" } do |f| %>
				<%= label_tag :description, "Tell us a little bit about what's on your mind." %>
				<%= f.text_area :description, 
												:onkeyup => "textAreaAdjust(this)",
												:autofocus => "true",
												:id => "explanation-text", 
												:placeholder => "..." %>
				<span class="sixteen columns" id="counter-text"></span>
				
				<%= label_tag :gender, "What is your gender?"%>
				<%= select(:gender, [["Male", "Male"], ["Female", "Female"], ["Other", "Other"]])%>
				
				<%= f.submit "Submit", :class => "submit_button_white button sixteen columns" %>
			<% end %>
				

		</div>	
	</div>
</div>