<% content_for :title do %>
  Get Started Here!
<% end %>

<% content_for :body do %>
  <p>We want to assure you that the privacy and security of your information is our number one priority. With that, we need a little more information to get you the best match possible.</p>
<% end %>

<%= render 'layouts/header' %>

<div class="panel" id="signup-panel">
	<div class="bg-container">
		<div class="container">
			<%= form_for @user, url: { controller: "users", action: "update" } do |f| %>
				<%= label_tag :description, "Write briefly about the issue you are struggling with or why you want to see a therapist." %>
				<%= f.text_area :description, 
												:maxlength => "500",
												:id => "explanation-text", 
												:placeholder => "Write here..." %>
				<span class="countdown"></span>
				
				<%= label_tag :gender, "What is your gender?" %>
				<%= f.select(:gender, [['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']]) %>
				
				<%= label_tag :gender_pref, "Do you have a gender preference for the therapist we match you with?"%>
				<%= f.select(:gender_pref, [['Male', 'Male'], ['Female', 'Female'], ['No Preference', 'None']])%>
				
				<%= label_tag :age, "How old are you?" %>
				<%= f.text_field :age, :placeholder => "ex. 19" %>
				
				<%= label_tag :insurance, "If you have an insurance provider let us know who. If not, enter 'none'" %>
				<%= f.text_field(:insurance, :placeholder => "ex. Blue Cross")%>
				
				<%= f.submit "Submit", :class => "submit_button button" %>
			<% end %>
			
			<%= render 'shared/error_messages' %>
		</div>	
	</div>
</div>