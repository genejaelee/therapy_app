	<%= form_for @user, url: { controller: "users", action: "create" } do |f| %>
	
		<%= f.text_field :name, :placeholder => "John Doe" %>
		<%= f.text_field :email, :placeholder => "john@example.com" %>
		<%= f.text_field :zipcode, :placeholder => "ex. 12345" %>
		<%= f.submit "Get Started", :class => "submit_button button" %>
	<% end %>