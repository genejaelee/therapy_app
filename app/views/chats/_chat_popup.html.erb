<div class="ng-hide" id="popup-background" ng-hide="popup.close"></div>
<div id="chat-popup" class="popup ng-hide" ng-model="popup" ng-hide="popup.close">
	<div class="bg-container">
		<div class="container">
			
			<div class="header-container">
				<h2>Welcome to your private Chatroom</h2> 
				<p>Accept the following conditions to proceed.</p>
			</div>
			
			<hr style="border-top: 1px dashed #ccc;">
			
			<div class="change-nickname-container sixteen columns">
				<label>Your Chatroom Username</label>
				<div>
					<input type="text" id="nickname" ng-model="current.nickname" ng-enter="closePopup()" xng-focus='isCheckedN'></input>
				</div>
			</div>
			
			<div class="emergency-confirm sixteen columns" style="margin-bottom: 30px;">
				<label>Click the checkbox to accept.</label>
				<input type="checkbox" class="css-check" id="accept" ng-model="isCheckedN"></input>
				<p style="display: inline;">"I am over 18 years old, and I am not homicidal, suicidal or abusing anyone. I am not in an emergency situation, and I agree to the Plain White Couch <%= link_to "Terms of Service", terms_path %> and <%= link_to "Privacy Policy", privacy_path %>"</p>
			</div>

			<hr style="border-top: 1px dashed #ccc; margin-bottom: 20px;">

			<div class="button-container">
				<button class="confirm-button" ng-click="closePopup()">Okay, I understand.</button>
				<%= button_to "No, take me back", homepage_path, :class => "cancel-button", :method => 'get' %>
			</div>
		</div>
	</div>
</div>